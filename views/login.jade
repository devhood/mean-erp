  body.login
    .logo
      a(href='index.html')
        img(src='/assets/img/beautylane-logo.png', alt='', width="250px", height="70px")
    .content
      form.login-form(action='/auth/login', method='post')
        h3.form-title Login to your account
        if message
          .alert.alert-danger
            button.close(data-close='alert')
            span !{message}
        .alert.alert-danger.display-hide
          button.close(data-close='alert')
          span
            | Enter any username and password.
        .form-group
          label.control-label.visible-ie8.visible-ie9 Username
          .input-icon
            i.fa.fa-user
            input.form-control.placeholder-no-fix(type='text', autocomplete='off', placeholder='Username', name='username')
        .form-group
          label.control-label.visible-ie8.visible-ie9 Password
          .input-icon
            i.fa.fa-lock
            input.form-control.placeholder-no-fix(type='password', autocomplete='off', placeholder='Password', name='password')
        .form-actions
          label.checkbox
            input(type='checkbox', name='remember', value='1')
            | Remember me
          button.btn.green.pull-right(type='submit')
            | Login
            i.m-icon-swapright.m-icon-white
