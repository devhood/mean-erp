															.col-xs-12.col-sm-12.col-md-12.col-lg-12
																input.form-control(type="text", ng-model="test.freebie.quantity")
																span.col-md-12.help-block	Quantity
													.col-md-1
														button.btn-sm.green.custom-right(type="button")
															i.fa.fa-plus
												.col-md-6
													.row
														.form-group
																.row
																	br
																	.col-md-1
																	.col-md-10
																		.portlet-body.flip-scroll
																			table.table.table-bordered.table-condensed.flip-content
																				thead.flip-content.bg-grey
																					tr
																						th Product
																						th Quantity
																						th(width="5%") Action
																				tbody
																					tr(ng-repeat="freebie in promo.freebies track by $index")
																						td 
																						td 
																						td(width="5%")
																							.btn-group.btn-group-xs.btn-group-solid
																								a.tooltips.btn.default.tooltips(data-container="body", data-placement="top", data-html="true", data-original-title="Delete Record")
																									i.fa.fa-trash-o
																	.col-md-1
							.form-actions.fluid
								.row
										.col-md-6
											.col-md-offset-3.col-md-9
												button.btn.green(type="submit" ng-show="save_form.$valid && action!='read'") Submit
												| &nbsp;
												button.btn.red(type="button", ng-click="deletePurchase(purchase)", ng-show="action=='edit' || action=='approve'") Delete
												| &nbsp;
												a.btn.default(type="button", href="/#/purchase/index") Cancel
										.col-md-6
