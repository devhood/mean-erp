												.col-md-10
													.col-md-4
														.form-group
															.col-xs-12.col-sm-12.col-md-12.col-lg-12
																select.select2me.form-control.select2-offscreen(ng-model="promo.freebie.product", ng-options="product.name for product in products")
																span.col-md-12.help-block	Product Family
													.col-md-2
														.form-group
															.col-xs-12.col-sm-12.col-md-12.col-lg-12
																input.form-control(type="text", ng-model="promo.freebie.quantity")
																span.col-md-12.help-block	Quantity
													.col-md-1
														button.btn-sm.green.custom-right(type="button",ng-click="addFreebie(promo.freebie)")
															i.fa.fa-plus
												.col-md-1
										.row
											.form-group
												.col-md-1
												.col-md-6
													.row
														br
														.col-md-12
															.portlet-body.flip-scroll
																table.table.table-bordered.table-condensed.flip-content
																	thead.flip-content.bg-grey
																		tr
																			th Product
																			th Quantity
																			th(width="5%") Action
																	tbody
																		tr(ng-repeat="freebie in promo.freebies track by $index")
