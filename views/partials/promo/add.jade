									.portlet-title
										.caption
											i.fa.fa-reorder
											| TEST LAYOUT
										.tools
											a.collapse(href="javascript:;")
									.portlet-body.form
										.form-body
											br
											br
											.row(ng-hide="action!='add'")
												.col-md-6
													.col-md-6
														.form-group
															.col-xs-12.col-sm-12.col-md-12.col-lg-12
																select.select2me.form-control.select2-offscreen(type="text", ng-model="test.freebie.quantity")
																span.col-md-12.help-block	Product Family
													.col-md-5
