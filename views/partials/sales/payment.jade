block title
  title PAYMENT RECORD
.portlet.box.grey
  .portlet-title
    .caption
      i.fa.fa-reorder
      | {{title}}
    .tools
      a.collapse(href="javascript:;")
      a.config(href="#portlet-config", data-toggle="modal")
      a.reload(href="javascript:;")
      a.remove(href="javascript:;")
  .portlet-body.form
    form.form-horizontal(role="form", name="save_form", ng-submit="save_form.$valid && saveSales()", novalidate)
      .form-body
        .row(ng-show="sales.cmno")
          .col-md-6
            .form-group
              .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
          .col-md-6
            .form-group
              .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-left
                input.form-control(type="text", ng-value="sales.cmno", readonly)
                span.col-md-12.help-block  CM Number
        .row
          .col-md-6
            .form-group(ng-show="sales.pfno")
              .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
                input.form-control(type="text", ng-value="sales.pfno", readonly)
                span.col-md-12.help-block PF Number
            .form-group(ng-show="sales.sono")
              .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
                input.form-control(type="text", ng-value="sales.sono", readonly)
                span.col-md-12.help-block SO Numbers
          .col-md-6
            .form-group
              .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-left
                input.form-control(type="text", ng-value="sales.pmno", readonly)
                span.col-md-12.help-block  PM Number
        .row
          .col-md-6
            .form-group
              .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
                input.form-control(type="text", ng-value="sales.sino", readonly)
                span.col-md-12.help-block SI Number
          .col-md-6
            .form-group
              .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-left
                input.form-control(type="text", ng-value="sales.drno", readonly)
                span.col-md-12.help-block DR Number
        .row
          .col-md-6
            .form-group
              .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
                input.form-control(type="text", ng-value="sales.transaction_type", readonly )
                span.col-md-12.help-block Transaction Type
          .col-md-6
            .form-group(ng-show="sales.cmno")
              .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-left
                input.form-control(type="text", ng-value="sales.cmno", readonly)
                span.col-md-12.help-block CM Number
        .row
          .col-md-6
            .form-group
              .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
                input.form-control(type="text", ng-value="sales.reference_no", ng-disabled="true")
                span.col-md-12.help-block Reference No
          .col-md-6
            .form-group
              .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-left
                input.form-control(type="text", ng-value="sales.delivery_date", datepicker-popup="{{'MM/dd/yyyy'}}", ng-disabled="true")
                span.col-md-12.help-block Delivery Date
        .row
          .col-md-1
          .col-md-10
            .form-group
              .col-xs-12.col-sm-12.col-md-12.col-lg-12(align="center")
                input.form-control(type="text", ng-value="sales.customer.company_name + sales.customer.branch", readonly)
                span.col-md-12.help-block Customer
          .col-md-1
        .row
          .col-md-1
          .col-md-10
            .form-group
              .col-xs-12.col-sm-12.col-md-12.col-lg-12(align="center")
                input.form-control(type="text", ng-value="shipping_address", disabled)
                span.col-md-12.help-block Shipping Address
          .col-md-1
        .row
          .col-md-1
          .col-md-10
            .form-group
              .col-xs-12.col-sm-12.col-md-12.col-lg-12(align="center")
                input.form-control(type="text", ng-value="billing_address", disabled)
                span.col-md-12.help-block Billing Address
          .col-md-1
        .row(ng-show="sales.customer")
          .col-md-6
            .form-group
              .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
                input.form-control(type="text", ng-value="sales.customer.price_type", ng-disabled="true")
                span.col-md-12.help-block Price Type
          .col-md-6
            .form-group
              .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-left
                input.form-control(type="text", ng-value="sales.customer.discount", ng-disabled="true")
                span.col-md-12.help-block Permanent Discount
        .row(ng-show="sales.customer")
          .col-md-6
            .form-group
              .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
                input.form-control(type="text", ng-value="sales.customer.sales_executive", ng-disabled="true")
                span.col-md-12.help-block Sales Executive
          .col-md-6
            .form-group
              .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-left
                input.form-control(type="text", ng-value="sales.customer.payment_term", ng-disabled="true")
                span.col-md-12.help-block Payment Terms
        .row
          .col-md-6
            .form-group
              .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
                input.form-control(type="text", ng-value="sales.order_source", ng-disabled="true" )
                span.col-md-12.help-block Order Source
          .col-md-6
            .form-group
              .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-left
                input.form-control(type="text", ng-value="sales.delivery_method", ng-disabled="true" )
                span.col-md-12.help-block Delivery Method
        .row
          .col-md-6
            .form-group
              .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
                input.form-control(type="text", ng-value="sales.inventory_location", ng-disabled="true" )
                span.col-md-12.help-block Inventory Location
          .col-md-6
            .form-group
              .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-left
                input.form-control(type="text", ng-value="sales.ordered_by", ng-minlength="0", ng-maxlength="25", ng-disabled="true" )
                span.col-md-12.help-block Ordered By
        .row
          .col-md-1
          .col-md-10
            .form-group
              .col-xs-12.col-sm-12.col-md-12.col-lg-12(align="center")
                input.form-control(type="text", ng-value="sales.special_instruction", ng-disabled="true" )
                span.col-md-12.help-block Special Instructions
          .col-md-1
        .row(ng-show="sales.promo")
          .col-md-1
          .col-md-10
            .form-group
              .col-xs-12.col-sm-12.col-md-12.col-lg-12(align="center")
                input.form-control(type="text",ng-value="sales.promo", disabled)
                span.col-md-12.help-block Promo
        .portlet.box.grey(ng-show="sales.customer")
          .portlet-title
            .caption
              i.fa.fa-reorder
              | ORDERED ITEMS
            .tools
              a.collapse(href="javascript:;")
          .portlet-body.form
            .form-body
              br
              br
              .row(ng-hide="true")
                .col-md-1
                .col-md-10
                  .col-md-3
                    .form-group
                      .col-xs-12.col-sm-12.col-md-12.col-lg-12
                        select.select2me.form-control.select2-offscreen(ng-model="sales.item", ng-options="product.bl_code for product in products")
                        span.col-md-12.help-block Code
                  .col-md-4
                    .form-group
                      .col-xs-12.col-sm-12.col-md-12.col-lg-12
                        select.select2me.form-control.select2-offscreen(ng-model="sales.item", ng-options="product.name for product in products")
                        span.col-md-12.help-block Product
                  .col-md-2
                    .form-group
                      .col-xs-12.col-sm-12.col-md-12.col-lg-12
                        input.form-control(type="number", ng-min="1", ng-minlength="0", ng-maxlength="20", ng-model="sales.item.quantity")
                        span.col-md-12.help-block Quantity
                  .col-md-2
                    .form-group
                      .col-xs-12.col-sm-12.col-md-12.col-lg-12
                        select.select2me.form-control.select2-offscreen(ng-model="sales.item.override")
                          option(value='NORMAL') None
                          option(value='FREEBIE') Freebie
                          option(value='DEMO') Demo
                        span.col-md-12.help-block Override
                  .col-md-1
                    button.btn-sm.green.custom-right(type="button",ng-click="addOrder(sales)")
                      i.fa.fa-plus
                .col-md-1
              .form-group
                .col-md-1
                .col-md-10
                  .row
                    br
                    .col-md-12
                      .portlet-body.flip-scroll
                        table.table.table-bordered.table-condensed.flip-content
                          thead.flip-content.bg-grey
                            tr
                              th Code
                              th Product
                              th Quantity
                              th Unit Price
                              th Total
                          tbody
                            tr(ng-repeat="ordered_item in sales.ordered_items track by $index")
                              td {{ordered_item.bl_code}}
                              td {{ordered_item.name}}
                              td {{ordered_item.quantity}}
                              td {{ordered_item.price}}
                              td {{ordered_item.total}}
                .col-md-1
        .portlet.box.grey(ng-show="sales.returned_items")
          .portlet-title
            .caption
              i.fa.fa-reorder
              | RETURNED ITEMS
            .tools
              a.collapse(href="javascript:;")
          .portlet-body.form
            .form-body
              br
              br
              .row(ng-hide="action=='create'")
                .col-md-1
                .col-md-10
                  .col-md-3
                    .form-group
                      .col-xs-12.col-sm-12.col-md-12.col-lg-12
                        select.select2me.form-control.select2-offscreen(ng-model="sales.return", ng-options="product.bl_code for product in products")
                        span.col-md-12.help-block Code
                  .col-md-5
                    .form-group
                      .col-xs-12.col-sm-12.col-md-12.col-lg-12
                        select.select2me.form-control.select2-offscreen(ng-model="sales.return", ng-options="product.name for product in products")
                        span.col-md-12.help-block Product
                  .col-md-3
                    .form-group
                      .col-xs-12.col-sm-12.col-md-12.col-lg-12
                        input.form-control(type="number", ng-min="1", ng-minlength="0", ng-maxlength="20", ng-model="sales.return.quantity")
                        span.col-md-12.help-block Quantity
                  .col-md-1
                    button.btn-sm.green.custom-right(type="button",ng-click="addReturn(sales)")
                      i.fa.fa-plus
                .col-md-1
              .form-group
                .col-md-1
                .col-md-10
                  .row
                    br
                    .col-md-12
                      .portlet-body.flip-scroll
                        table.table.table-bordered.table-condensed.flip-content
                          thead.flip-content.bg-grey
                            tr
                              th Code
                              th Product
                              th Return Quantity
                              th Unit Price
                              th Total
                          tbody
                            tr(ng-repeat="returned_item in sales.returned_items track by $index")
                              td {{returned_item.bl_code}}
                              td {{returned_item.name}}
                              td {{returned_item.quantity}}
                              td {{returned_item.price}}
                              td {{returned_item.total}}
                .col-md-1
       .row
         .col-md-6
           .form-group
             .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
         .col-md-6
           .form-group
             .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-left
               input.form-control(type="text", ng-value="sales.total_quantity", readonly, style="text-align: right;")
               span.col-md-12.help-block Total Quantity
       .row
         .col-md-6
           .form-group
             .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
         .col-md-6
           .form-group
             .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-left
               input.form-control(type="text", ng-value="sales.discount", readonly, style="text-align: right;")
               span.col-md-12.help-block Discount
       .row
         .col-md-6
           .form-group
             .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
         .col-md-6
           .form-group
             .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-left
               input.form-control(type="text", ng-value="sales.total_vat", readonly, style="text-align: right;")
               span.col-md-12.help-block VATable Sales
       .row
         .col-md-6
           .form-group
             .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
         .col-md-6
           .form-group
             .col-xs-12.col-sm-12.col-md-3.col-lg-1.custom-left
               input.form-control(type="checkbox", ng-value="sales.isWithholdingTax",ng-checked="reCompute(sales)", value="1", ng-disabled="true", style="text-align: right;")
             .col-xs-12.col-sm-12.col-md-7.col-lg-9.custom-left
               input.form-control(type="text", ng-value="sales.withholding_tax", readonly, style="text-align: right;")
               span.col-md-12.help-block W/Holding Tax
             .col-md-2

       .row
         .col-md-6
           .form-group
             .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
         .col-md-6
           .form-group
             .col-xs-12.col-sm-12.col-md-3.col-lg-1.custom-left
               input.form-control(type="checkbox", ng-value="sales.isZeroRateSales",ng-checked="reCompute(sales)", value="1", ng-disabled="true")
             .col-xs-12.col-sm-12.col-md-7.col-lg-9.custom-left
               input.form-control(type="text", ng-value="sales.zero_rate_sales", readonly, style="text-align: right;")
               span.col-md-12.help-block VAT Exempt/ Zero Rated Sales
             .col-md-2
       .row
         .col-md-6
           .form-group
             .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
         .col-md-6
           .form-group
             .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-left
               input.form-control(type="text", ng-value="sales.total_amount_due", readonly, style="text-align: right;")
               span.col-md-12.help-block TOTAL AMOUNT DUE
        .portlet.box.grey(ng-show="sales.customer")
          .portlet-title
            .caption
              i.fa.fa-reorder
              | PAYMENT DETAILS
            .tools
              a.collapse(href="javascript:;")
          .portlet-body.form
            .form-body
              br
              br
              .row(ng-show="action=='update' || action=='create'")
                .col-md-12
                  .col-md-2
                    .form-group
                      .col-xs-12.col-sm-12.col-md-12.col-lg-12
                        select.select2me.form-control.select2-offscreen(ng-model="sales.payment_detail.payment_type", ng-options="payment_type.name as payment_type.name for payment_type in payment_types")
                        span.col-md-12.help-block Type
                  .col-md-2
                    .form-group
                      .col-xs-12.col-sm-12.col-md-12.col-lg-12
                        input.form-control(type="text", ng-min="1", ng-minlength="0", ng-maxlength="20", ng-model="sales.payment_detail.check_number")
                        span.col-md-12.help-block Check No.
                  .col-md-2
                    .form-group
                      .col-xs-12.col-sm-12.col-md-12.col-lg-12
                        input.form-control(type="text", ng-model="sales.payment_detail.check_dep_date",  datepicker-popup="{{format}}")
                        span.col-md-12.help-block Check/Dep date
                  .col-md-3
                    .form-group
                      .col-xs-12.col-sm-12.col-md-12.col-lg-12
                          input.form-control(type="text", ng-model="sales.payment_detail.bank")
                          span.col-md-12.help-block Bank
                  .col-md-2
                    .form-group
                      .col-xs-12.col-sm-12.col-md-12.col-lg-12
                          input.form-control(type="number", ng-model="sales.payment_detail.amount")
                          span.col-md-12.help-block Amount
                  .col-md-1
                    button.btn-sm.green.custom-right(type="button",ng-click="addPayment(sales)")
                      i.fa.fa-plus
              .form-group
                .col-md-1
                .col-md-10
                  .row
                    br
                    .col-md-12
                      .portlet-body.flip-scroll
                        table.table.table-bordered.table-condensed.flip-content
                          thead.flip-content.bg-grey
                            tr
                              th Type
                              th Number
                              th Check/Dep date
                              th Bank
                              th Amount
                              th(width="5%", ng-hide=("action=='read'||action=='approve'")) Action
                          tbody
                            tr(ng-repeat="payment_detail in sales.payment_details track by $index")
                              td {{payment_detail.payment_type}}
                              td {{payment_detail.check_number}}
                              td {{payment_detail.check_dep_date | date}}
                              td {{payment_detail.bank}}
                              td(style="text-align: right;") {{payment_detail.amount}}
                              td(width="5%", ng-hide=("action=='read'||action=='approve'"))
                                .btn-group.btn-group-xs.btn-group-solid
                                  a.tooltips.btn.default.tooltips(ng-click="removePayment($index)", data-container="body", data-placement="top", data-html="true", data-original-title="Delete Record")
                                    i.fa.fa-trash-o
                .col-md-1
            .row(ng-show="sales.cmno")
              .col-md-6
                .form-group
                  .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
                    input.form-control(type="text", ng-model="sales.credit_memo", style="text-align: right;", disabled)
                    span.col-md-12.help-block  Credit Memo
              .col-md-6
                .form-group
                  .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-left
            .row
              .col-md-6
                .form-group
                  .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
                    input.form-control(type="text", ng-model="sales.payment_notes", ng-readonly="action=='approve'")
                    span.col-md-12.help-block Payment Notes
              .col-md-6
                .form-group
                  .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-left
                    input.form-control(type="number", ng-model="sales.other_fees", ng-disabled="action=='approve'", ng-change="OtherFeesChange()", style="text-align: right;")
                    span.col-md-12.help-block  Other Fees
            .row
              .col-md-6
                .form-group
                  .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-right
                    input.form-control(type="text", ng-model="sales.prno", ng-readonly="action=='approve'")
                    span.col-md-12.help-block  PR Number
              .col-md-6
                .form-group
                  .col-xs-12.col-sm-12.col-md-10.col-lg-10.custom-left
                    input.form-control(type="number", ng-model="sales.total_payment", readonly, style="text-align: right;")
                    span.col-md-12.help-block  Total Payment here

      .form-actions.fluid
        .row
          .col-md-6
            .col-md-offset-3.col-md-9
              button.btn.green(type="submit" ng-show="save_form.$valid && action!='read' && proceedPayment=='true'") Submit
              | &nbsp;
              button.btn.red(type="button", ng-click="rejectPayment(sales)", ng-show="action=='approve' || action=='create'") Reject
              | &nbsp;
              a.btn.default(type="button", href="/#/sales/index/payment") Cancel
          .col-md-6
